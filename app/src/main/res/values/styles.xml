<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:iconTint" tools:ignore="NewApi">@android:color/white</item>
    </style>

    <style name = "CustomAppThemeTitle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:color">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomAppThemeHeader">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="CustomAppThemeText">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="CustomAppThemeText.Medium">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="CustomAppThemeText.Large">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>



    <style name="CustomAppThemeText.calendar">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomAppThemeButton">
        <item name="android:drawablePadding">@dimen/dimen_tiny</item>
        <item name="android:background">@drawable/curved_rect</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:padding">@dimen/dimen_small</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:elevation">@dimen/elevation_lower</item>
    </style>

    <style name="AnimatedDialog">
        <item name="android:windowExitAnimation">@anim/slide_up</item>
        <item name="android:windowEnterAnimation">@anim/slide_down</item>
    </style>


</resources>
