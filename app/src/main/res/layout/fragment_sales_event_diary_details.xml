<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/elevation_lower"
        app:cardBackgroundColor="@color/white">

        <TextView
            android:id="@+id/salesDate"
            style="@style/CustomAppThemeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="@dimen/dimen_tiny"
            android:padding="@dimen/dimen_small"
            android:text="@string/sample_text" />
    </androidx.cardview.widget.CardView>


    <com.daveace.salesdiary.customview.CustomExpandableCardView
        android:id="@+id/product_detail_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_tiny"
        android:elevation="@dimen/elevation_lower"
        app:animationDuration="300"
        app:expandOnClick="true"
        app:icon="@mipmap/product"
        app:inner_view="@layout/component_sales_event_product"
        app:layout_constraintTop_toBottomOf="@id/sales_event_holder"
        app:startExpanded="false"
        app:title="@string/product_details" />

    <com.daveace.salesdiary.customview.CustomExpandableCardView
        android:id="@+id/customer_detail_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_tiny"
        android:elevation="@dimen/elevation_lower"
        app:animationDuration="300"
        app:expandOnClick="true"
        app:icon="@drawable/ic_account_box_black"
        app:inner_view="@layout/component_sales_event_customer"
        app:layout_constraintTop_toBottomOf="@id/sales_event_holder"
        app:startExpanded="false"
        app:title="@string/customer_details" />

    <com.daveace.salesdiary.customview.CustomExpandableCardView
        android:id="@+id/location_detail_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_tiny"
        android:elevation="@dimen/elevation_lower"
        app:animationDuration="300"
        app:expandOnClick="true"
        app:icon="@drawable/ic_location_black"
        app:inner_view="@layout/component_sales_event_map_layout"
        app:layout_constraintTop_toBottomOf="@id/sales_event_holder"
        app:startExpanded="false"
        app:title="Location" />

</LinearLayout>