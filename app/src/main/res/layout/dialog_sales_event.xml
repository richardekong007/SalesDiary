                <!--android:id="@+id/locationIcon"-->
                <!--android:layout_width="@dimen/icon_small"-->
                <!--android:layout_height="@dimen/icon_small"-->
                <!--android:layout_marginTop="@dimen/dimen_large"-->
                <!--android:contentDescription="@string/location_icon"-->
