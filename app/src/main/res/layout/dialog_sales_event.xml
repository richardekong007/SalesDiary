            <!--<TextView-->
                <!--android:id="@+id/place_text"-->
                <!--style="@style/CustomAppThemeText"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginStart="@dimen/text_size_small"-->
                <!--android:text="@string/sample_text"-->
                <!--app:layout_constraintBottom_toBottomOf="@id/locationIcon"-->
                <!--app:layout_constraintStart_toEndOf="@id/locationIcon" />-->

    </androidx.cardview.widget.CardView>
    <com.alespero.expandablecardview.ExpandableCardView
        android:id="@+id/map_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_tiny"
        app:title="Location"
        app:icon="@drawable/ic_location_black"
        app:inner_view="@layout/component_sales_event_map_layout"
        app:expandOnClick="true"
        app:animationDuration="300"
        app:startExpanded="false"
        app:layout_constraintTop_toBottomOf="@id/sales_event_holder"/>
</androidx.constraintlayout.widget.ConstraintLayout>


