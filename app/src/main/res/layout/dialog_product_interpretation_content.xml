<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        style="@style/CustomAppThemeHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/elevation_lower"
        android:padding="@dimen/dimen_small"
        android:text="@string/sales_event_interpretation_title"
        android:textAlignment="center"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_medium">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_small"
            android:padding="@dimen/dimen_small"
            app:cardCornerRadius="@dimen/dimen_small"
            app:cardElevation="@dimen/elevation_lower">

            <TextView
                android:id="@+id/interpretation"
                style="@style/CustomAppThemeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_small"
                android:textColor="@android:color/black" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/elevation_lower"
            app:cardCornerRadius="@dimen/dimen_small">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimen_medium"
                android:elevation="@dimen/elevation_lower">

                <TextView
                    android:id="@+id/statusTitle"
                    style="@style/CustomAppThemeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_small"
                    android:background="@drawable/curved_rect"
                    android:backgroundTint="@color/colorPrimary"
                    android:drawableStart="@drawable/ic_pie_chart_white_24dp"
                    android:drawablePadding="@dimen/dimen_small"
                    android:padding="@dimen/dimen_small"
                    android:text="@string/product_availability_status"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/productAvailabilityChart"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pie_radius_small"
                    android:layout_marginBottom="@dimen/dimen_medium"
                    android:elevation="@dimen/elevation_lower"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/statusTitle" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/statusChip"
                    style="@style/CustomAppThemeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:backgroundTint="@color/colorPrimary"
                    android:text="@string/status"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/productAvailabilityChart" />

                <TextView
                    android:id="@+id/status"
                    style="@style/CustomAppThemeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_small"
                    android:text="@string/sample_text"
                    app:layout_constraintBaseline_toBaselineOf="@id/statusChip"
                    app:layout_constraintStart_toEndOf="@id/statusChip"
                    app:layout_constraintTop_toBottomOf="@id/productAvailabilityChart" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>
