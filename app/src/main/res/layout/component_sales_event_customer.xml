<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/elevation_higher"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/dimen_tiny">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/dimen_medium">

        <ImageView
            android:id="@+id/customerIcon"
            android:layout_width="@dimen/icon_small"
            android:layout_height="@dimen/icon_small"
            android:layout_marginTop="@dimen/dimen_tiny"
            android:layout_marginEnd="@dimen/dimen_tiny"
            android:contentDescription="@string/product_image"
            android:src="@drawable/ic_account_box_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/section_header2" />

        <TextView
            android:id="@+id/customerName"
            style="@style/CustomAppThemeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_size_small"
            android:text="@string/sample_text"
            app:layout_constraintBottom_toBottomOf="@id/customerIcon"
            app:layout_constraintStart_toEndOf="@id/customerIcon" />

        <ImageView
            android:id="@+id/emailIcon"
            android:layout_width="@dimen/icon_small"
            android:layout_height="@dimen/icon_small"
            android:layout_marginTop="@dimen/dimen_tiny"
            android:layout_marginEnd="@dimen/dimen_tiny"
            android:contentDescription="@string/product_image"
            android:src="@drawable/ic_email_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/customerIcon" />

        <TextView
            android:id="@+id/customerEmail"
            style="@style/CustomAppThemeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_size_small"
            android:text="@string/sample_text"
            app:layout_constraintBottom_toBottomOf="@id/emailIcon"
            app:layout_constraintStart_toEndOf="@id/emailIcon" />

        <ImageView
            android:id="@+id/customerCompanyIcon"
            android:layout_width="@dimen/icon_small"
            android:layout_height="@dimen/icon_small"
            android:layout_marginTop="@dimen/dimen_tiny"
            android:layout_marginEnd="@dimen/dimen_tiny"
            android:contentDescription="@string/product_image"
            android:src="@drawable/ic_company_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emailIcon" />

        <TextView
            android:id="@+id/customerCompany"
            style="@style/CustomAppThemeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_size_small"
            android:text="@string/sample_text"
            app:layout_constraintBottom_toBottomOf="@id/customerCompanyIcon"
            app:layout_constraintStart_toEndOf="@id/customerCompanyIcon" />

        <ImageView
            android:id="@+id/customerPhoneIcon"
            android:layout_width="@dimen/icon_small"
            android:layout_height="@dimen/icon_small"
            android:layout_marginTop="@dimen/dimen_tiny"
            android:layout_marginEnd="@dimen/dimen_tiny"
            android:contentDescription="@string/product_image"
            android:src="@drawable/ic_phone_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/customerCompanyIcon" />

        <TextView
            android:id="@+id/customerPhone"
            style="@style/CustomAppThemeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_size_small"
            android:text="@string/sample_text"
            app:layout_constraintBottom_toBottomOf="@id/customerPhoneIcon"
            app:layout_constraintStart_toEndOf="@id/customerPhoneIcon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>